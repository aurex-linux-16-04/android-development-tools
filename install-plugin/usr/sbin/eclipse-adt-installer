die(){
	echo "$1" >&2
	exit 1
}

usage(){
	die "Usage: $(basename "$0") {install|uninstall}\n\
       $(basename "$0") user-install ECLIPSE_BINARY_EXECUTABLE"
}

[ "$1" ] || usage

DEST_DIR="/var/lib/eclipse-adt-plugin"
BEGIN_ADT_LINE="### BEGIN: ADT settings. Do not edit this lines ####"
END_ADT_LINE="### END: ADT settings ####"
REQ_URL="http://dl.google.com/android/ADT-22.0.5.zip"

case "$1" in
	install)
		if aurex-cache get "$REQ_URL" ; then
			EXEC_FILE="$(aurex-cache file "$REQ_URL")"
			if [ "$EXEC_FILE" ] && [ -r "$EXEC_FILE" ] ; then
				echo "Extracting files"
				mkdir -p "$DEST_DIR"
				unzip -o -d "$DEST_DIR" "$EXEC_FILE"
			fi
		fi
		;;
	uninstall)
		rm -fr "$DEST_DIR"
		;;
	user-install)
		[ "$2" ] || usage
		ECLIPSE_CMD="$2"
		# TODO: check previous run ...
		if android-sdk-installer ; then
			# Most of the magic code has been "stolen" from:
			# http://stackoverflow.com/questions/7163970/how-do-you-automate-the-installation-of-eclipse-plugins-with-command-line
			# Thanks a lot samb, (http://stackoverflow.com/users/446302/samb)
			
			# 1. first list all IU's found in the plugin repository
			$ECLIPSE_CMD -nosplash -application org.eclipse.equinox.p2.director -repository
		fi
		;;
	*)
		usage
		;;
esac

exit 0
